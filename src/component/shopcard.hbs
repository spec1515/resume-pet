<div class='row my-5'>
  {{#each cards}}
    <div class='col-4 gy-3'>
      <div class='card'>
        <div>
          <img
            class='card-img-top'
            src='{{image}}'
            alt='{{title}}'
          />
        </div>
        <div class='card-body'>

          <strong class='card-title'>{{title}}
            {{#if isHot}}
              <span
                class='badge text-bg-warning rounded-pill'
              >HOT!</span>
            {{/if}}
            {{#if isNew}}
              <span
                class='badge text-bg-primary rounded-pill'
              >Нове</span>
            {{/if}}
          </strong>

          <p class='mt-3'>{{description}}</p>

        </div>
      </div>
    </div>
  {{/each}}
</div>
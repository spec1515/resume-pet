<div class='my-3'>
  {{#each itemList}}
    {{#with this}}
      <div class='row my-2'>
        <div class='col-2 my-2'>
          <p class='text-secondary'>{{number}}</p>
          <strong>{{status}}</strong>
        </div>

        <div class='col-2 my-2'>
          {{#with amount}}
            <p>{{title}}</p>
            <div>
              <p>{{value}}</p>
            </div>
          {{/with}}
        </div>

        <div class='col-6 mb-3'>
          {{#each images}}
            <img src='{{this}}' />
          {{/each}}

        </div>

        <div class='col-2 my-5'>
          {{#with button}}
            {{#if isPrimary}}
              <a href='{{link}}'><button
                  class='btn btn-primary'
                >{{text}}</button></a>
            {{/if}}
          {{/with}}
        </div>
        <hr />

      </div>
    {{/with}}
  {{/each}}

</div>